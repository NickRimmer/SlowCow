<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="700"
             x:Class="SlowCow.Setup.UI.Views.ActionLoadingView">
    <StackPanel Orientation="Vertical" Background="{DynamicResource AccentGradient}">
        <ProgressBar
            Height="6"
            CornerRadius="0"
            IsIndeterminate="True"
            Background="{DynamicResource ProgressBackground}"
            Foreground="{DynamicResource ProgressForeground}" />
        <StackPanel Orientation="Vertical" Margin="30">
            <Label
                x:Name="ActionLoadingPanel"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                FontSize="20"
                FontWeight="ExtraLight"
                Foreground="{DynamicResource ForegroundLightSecond}">
                Loading details...
            </Label>
            <Label
                x:Name="DetailsLabel"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                FontSize="14"
                FontWeight="ExtraLight"
                Foreground="{DynamicResource ForegroundLightSecond}"/>
        </StackPanel>
    </StackPanel>
</UserControl>